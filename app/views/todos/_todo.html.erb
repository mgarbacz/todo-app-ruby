<li id="todo_<%= todo.id %>" class="todo">
  <%= form_for todo, :remote => true,
                     :html => { :id => 'todo_update_' + todo.id.to_s },
                     :url => { :controller => 'todos', 
                               :action => 'update',
                               :id => todo.id } do |f| %>
    <%= f.check_box :done,
                    :id => 'todo_done_' + todo.id.to_s,
                    :class => 'todo_done todo_done_' + todo.done.to_s,
                    :onchange => '$("#todo_update_' + todo.id.to_s + '").submit();' %>
  <% end %>
  <%= todo.todo %>
</li>
