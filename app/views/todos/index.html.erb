<h1>Your Todos</h1>
<ul class="todos">
  <% @todos.each do |todo| %>
    <li class="todo">
      <input id="todo_done" type="checkbox">
      <%= todo.todo %>
    </li>
  <% end %>
</ul>
<%= form_for :todo, :remote => true, :html => { :id => 'new_todo' }, 
             :url => { :controller => 'todos', :action => 'create' } do |f| %>
  <%= f.text_field :todo %>
  <%= f.submit 'Add Todo', :class => 'btn', :id => 'todo_submit'  %>
<% end %>
